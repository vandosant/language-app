%div{:id => 'content_container'}
  =notice

  =form_for @user, :url => {:action => 'signin'} do |f|
    -if @user.errors.any?
      -@user.errors.each do |_, error|
        %p
          =error
    =f.label :email
    =f.text_field :email, :id => 'email'
    =f.label :password
    =f.password_field :password, :id => 'password'
    =f.submit :id => 'login'